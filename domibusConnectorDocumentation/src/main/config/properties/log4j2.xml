<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitor="10">
    <Properties>
        <!-- change the base path!! -->
        <Property name="basePath">../logs/</Property>
        <Property name="PID">????</Property>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
        <Property name="CONN_CONSOLE_LOG_PATTERN">%style{%d{${LOG_DATEFORMAT_PATTERN}}}{faint}
            %highlight{${LOG_LEVEL_PATTERN}} %style{${sys:PID}}{magenta} %clr{---}{faint} [tid=%38.-38X{messageid}]
            [processor=%20.-20X{message_processor}] %clr{[%15.15t]}{faint} %style{%-40.40c{1.}}{cyan} %clr{:}{faint}
            %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}
        </Property>
        <Property name="CONN_FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} ${sys:PID} ---
            [tid=%64.-64X{messageid}] [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}
        </Property>
    </Properties>
    <Appenders>
        <!-- log business related logs into own log file -->
        <!-- business log messages are marked with 'BUSINESS' -->
        <RollingFile name="Business" fileName="${basePath}/business.log"
                     filePattern="${basePath}/business-%d{yyyy-MM-dd}.log">
            <MarkerFilter marker="BUSINESS" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${sys:CONN_FILE_LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5M"/>
            </Policies>
        </RollingFile>
        <!-- -->
        <RollingFile name="File" fileName="${basePath}/connector.log"
                     filePattern="${basePath}/connector-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${sys:CONN_FILE_LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5M"/>
            </Policies>
        </RollingFile>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <!-- <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] [msgid=%X{messageid}] %-5level %logger{36} - %msg%n" /> -->
            <PatternLayout pattern="${sys:CONN_CONSOLE_LOG_PATTERN}"/>
        </Console>
        <!-- if you need to log into a network based logging system (syslog, ...) -->
        <!-- create a new log appender here -->
    </Appenders>
    <Loggers>
        <Root level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
        <Logger name="org.liquibase" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <!-- show database queries -->
        <!--
		<Logger name="org.hibernate" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
			<AppenderRef ref="File" />
        </Logger>
        -->
        <!-- log cxf requests -->
        <!--
        <Logger name="org.apache.cxf" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>
        -->
        <Logger name="eu.domibus.connector" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Business"/>
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>
